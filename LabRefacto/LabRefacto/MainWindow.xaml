<Window x:Class="LabRefacto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabRefacto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="0,0,0,-1">
        <Label Content="Calcul de la moyenne" HorizontalAlignment="Center" Height="35" Margin="105,20,101,0" VerticalAlignment="Top" Width="195" FontFamily="Lucida Calligraphy" FontSize="16" />
        <Label Content="Matricule:" HorizontalAlignment="Left" Height="25" Margin="43,75,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox Name="txtMat" HorizontalAlignment="Left" Height="25" Margin="198,75,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150"/>
        <Label Content="Nom:" HorizontalAlignment="Left" Height="25" Margin="43,115,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox Name="txtNom" HorizontalAlignment="Left" Height="25" Margin="198,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label Content="Note Mathématiques:" HorizontalAlignment="Left" Height="25" Margin="43,155,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox Name="txtMaths" HorizontalAlignment="Left" Height="25" Margin="198,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Label Content="Note Informatique:" HorizontalAlignment="Left" Height="25" Margin="43,194,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox Name="txtInfo" HorizontalAlignment="Left" Height="25" Margin="198,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <RadioButton Content="Principale" Name="rdbPrin" HorizontalAlignment="Left" Margin="190,243,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Rattrapage" Name="rdbRat" HorizontalAlignment="Left" Margin="284,243,0,0" VerticalAlignment="Top"/>
        <Label Content="Session:" HorizontalAlignment="Left" Height="25" Margin="43,236,0,0" VerticalAlignment="Top" Width="130"/>
        <Button Content="Calculer la moyenne" Click="BtnCalculer_Click" HorizontalAlignment="Left" Height="25" Margin="131,280,0,0" VerticalAlignment="Top" Width="137"/>
        <Label Content="Résumé:" HorizontalAlignment="Left" Height="25" Margin="43,320,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBlock Name="txbResume" HorizontalAlignment="Left" Height="68" Margin="131,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217"/>
    </Grid>

</Window>
