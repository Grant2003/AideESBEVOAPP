    <Window x:Class="tp1EVO.ModalSuppression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tp1EVO"
        mc:Ignorable="d"
        Title="Supprimer un Film" Height="200" Width="250">
    <Grid>
        <StackPanel x:Name="PanelSupprimer">
            <TextBlock VerticalAlignment="Center" Margin="10">Veuillez confirmer la suppression du film</TextBlock>
            <Button x:Name="BtnConfirmerSuppr" Click="Click_btnConfirmerSuppr" Width="120" Margin="0,10,0,10">Confirmer</Button>
            <Button x:Name="BtnAnnuler" Click="Click_BtnAnnuler" Width="120">Annuler</Button>

        </StackPanel>
    </Grid>
</Window>
